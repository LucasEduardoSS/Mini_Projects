        size_hint: None, 1
        width: 300
        padding: 10
        spacing: 5
        
        CustomTextInput:
            id: nome_value  # A id não pode ser uma string
            text:'Nome'
        
        CustomTextInput:
            id: setor_value  # A id não pode ser uma string
            text:'Setor'
        
        CustomTextInput:
            id: cargo_value  # A id não pode ser uma string
            text:'Cargo'

        CustomButton:
            text: "Confirmar"
            on_release:
                root.add_person(nome_value.text, setor_value.text, cargo_value.text)

        BlankSpace:
